    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'metal-doddle'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=metal-doddle",
                    "--package=metal-doddle"
                ],
                "filter": {
                    "name": "metal-doddle",
                    "kind": "bin"
                }
            },
            "args": ["--answer=POWER"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'metal-doddle'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=metal-doddle",
                    "--package=metal-doddle"
                ],
                "filter": {
                    "name": "metal-doddle",
                    "kind": "bin"
                }
            },
            "args": ["--answer=POWER"],
            "cwd": "${workspaceFolder}"
        }
    ]
}